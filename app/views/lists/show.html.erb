
 <h1><%=@list.name%></h1>
 <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>



<ul class="list-group">
  <% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment%></li>
    <li class="list-group-item">
      <%= @bookmark.comment %>
      <%= link_to "Delete",
         bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list)%>

<%= link_to "Back to all lists", lists_path, class: 'btn btn-primary'%>
